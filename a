local vim = game:GetService("VirtualInputManager")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- ID c·ªßa game "Arise: Crossover" v√† khu v·ª±c AFK
local MAIN_GAME_ID = 87039211657390  -- ID c·ªßa game ch√≠nh
local AFK_GAME_ID = 116614712661486        -- üî¥ Thay s·ªë n√†y b·∫±ng ID c·ªßa map AFK!

-- Ki·ªÉm tra n·∫øu ƒëang ·ªü trong map AFK th√¨ d·ª´ng script
if game.PlaceId == AFK_GAME_ID then
    print("ƒêang ·ªü khu v·ª±c AFK, d·ª´ng script.")
    return
end

-- Ki·ªÉm tra n·∫øu kh√¥ng ·ªü game ch√≠nh th√¨ d·ª´ng script
if game.PlaceId ~= MAIN_GAME_ID then
    print("Kh√¥ng ph·∫£i Arise: Crossover, d·ª´ng script.")
    return
end

print("ƒêang ·ªü trong Arise: Crossover, b·∫Øt ƒë·∫ßu v√†o AFK...")

-- H√†m v√†o khu v·ª±c AFK
local function goToAFK()
    print("ƒêang di chuy·ªÉn v√†o khu v·ª±c AFK...")

    -- ·∫§n "\" ƒë·ªÉ m·ªü ƒëi·ªÅu h∆∞·ªõng giao di·ªán
    vim:SendKeyEvent(true, Enum.KeyCode.BackSlash, false, game)
    wait(0.1)
    vim:SendKeyEvent(false, Enum.KeyCode.BackSlash, false, game)
    wait(0.2)
    
    -- Di chuy·ªÉn trong menu
    vim:SendKeyEvent(true, Enum.KeyCode.Right, false, game)
    wait(0.2)
    vim:SendKeyEvent(true, Enum.KeyCode.Right, false, game)
    wait(0.2)

    -- Nh·∫•n Enter ƒë·ªÉ ch·ªçn
    vim:SendKeyEvent(true, Enum.KeyCode.Return, false, game)
    wait(0.1)
    vim:SendKeyEvent(false, Enum.KeyCode.Return, false, game)

    -- Xu·ªëng 4 l·∫ßn
    for i = 1, 4 do
        wait(0.2)
        vim:SendKeyEvent(true, Enum.KeyCode.Down, false, game)
        wait(0.1)
        vim:SendKeyEvent(false, Enum.KeyCode.Down, false, game)
    end

    -- Ch·ªçn m·ª•c AFK
    wait(0.2)
    vim:SendKeyEvent(true, Enum.KeyCode.Return, false, game)
    wait(0.1)
    vim:SendKeyEvent(false, Enum.KeyCode.Return, false, game)

    wait(0.5)
    vim:SendKeyEvent(true, Enum.KeyCode.Left, false, game)
    wait(0.1)
    vim:SendKeyEvent(false, Enum.KeyCode.Left, false, game)
    wait(0.2)

    -- X√°c nh·∫≠n v√†o AFK
    vim:SendKeyEvent(true, Enum.KeyCode.Return, false, game)
    wait(0.1)
    vim:SendKeyEvent(false, Enum.KeyCode.Return, false, game)
end

-- Ch·∫°y v√†o AFK n·∫øu ch∆∞a ·ªü ƒë√≥
goToAFK()
